{
  "name": "@project/components",
  "version": "1.0.0",
  "main": "./src/index",
  "packageManager": "yarn@3.2.2",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
