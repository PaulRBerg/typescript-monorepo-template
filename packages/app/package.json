{
  "name": "@project/app",
  "version": "1.0.0",
  "dependencies": {
    "@project/components": "workspace:*",
    "next": "^12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "4.8.4"
  },
  "packageManager": "yarn@3.2.2",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --port 3000",
    "export": "next export",
    "lint-check": "yarn tsc && yarn eslint .",
    "lint-fix": "yarn tsc && yarn eslint  --fix .",
    "prettier-check": "yarn prettier --check .",
    "prettier-fix": "yarn prettier --write .",
    "start": "next start",
    "style-check": "yarn stylelint \"./src/**/*.{ts,tsx}\"",
    "style-fix": "yarn stylelint --fix \"./src/**/*.{ts,tsx}\"",
    "watch": " yarn xstate typegen \"src/**/*.ts?(x)\" --watch"
  }
}
